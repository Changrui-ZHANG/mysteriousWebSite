<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-add-image-url-to-messages" author="system">
        <comment>Add image_url column to messages table for media upload support</comment>
        
        <addColumn tableName="messages">
            <column name="image_url" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <rollback>
            <dropColumn tableName="messages" columnName="image_url"/>
        </rollback>
    </changeSet>

</databaseChangeLog>