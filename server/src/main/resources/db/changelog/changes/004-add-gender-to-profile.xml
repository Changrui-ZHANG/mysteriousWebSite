<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="026-add-gender-to-user-profiles" author="changrui">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="user_profiles" columnName="gender"/></not>
        </preConditions>
        <comment>Ajout du champ genre aux profils utilisateurs</comment>
        <addColumn tableName="user_profiles">
            <column name="gender" type="VARCHAR(10)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>