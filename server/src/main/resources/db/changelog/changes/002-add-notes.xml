<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ============================================ -->
    <!-- DOMAIN: NOTE                                 -->
    <!-- ============================================ -->
    <changeSet id="014-create-notes" author="changrui">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="notes"/></not>
        </preConditions>
        <comment>Table des notes utilisateurs</comment>
        <createTable tableName="notes">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="color" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="014b-create-notes-index" author="changrui">
        <preConditions onFail="MARK_RAN">
            <not><indexExists indexName="idx_note_user"/></not>
        </preConditions>
        <createIndex indexName="idx_note_user" tableName="notes">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
