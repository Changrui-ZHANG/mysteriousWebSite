<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ============================================ -->
    <!-- CLEANUP: Remove old online_users table       -->
    <!-- ============================================ -->
    <changeSet id="001-drop-online-users-table" author="changrui">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="online_users"/>
        </preConditions>
        <comment>Suppression de la table online_users - remplacée par le système WebSocket en mémoire</comment>
        <dropTable tableName="online_users"/>
    </changeSet>

</databaseChangeLog>